<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pokemonproject">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/pokeball"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/pokeball"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.InventarioActivity"></activity>
        <activity android:name=".view.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.GameActivity"
            android:label="@string/title_activity_game"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.UserActivity" />
        <activity android:name=".view.MainActivity" />
        <activity android:name=".view.NewLeagueActivity" />
        <activity android:name=".view.JoinLeagueActivity" />
        <activity android:name=".view.ServerActivity" />
    </application>

</manifest>